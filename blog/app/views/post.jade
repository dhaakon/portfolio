extends blogpost
block content
  div.container
    div.post
      h1 #{post.title}
      span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
      hr
      div.content
        != post.content
      hr
      div.tags
        - each tag in post.tags
          a(href=tagUrl(tag))
            span.label.label-info #{tag}


block disqus
  div.container(style="margin-top:0;box-shadow:none;")
    div#disqus_thread
    script(type="text/javascript").
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'dhaakonsblog'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();

