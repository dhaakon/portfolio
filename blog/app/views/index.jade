extends blogpost 

block content
  - var posts = getPosts(0,5)
  - var page  = 1
  - each post in posts
    div.container.invert
      div.index-post
        p.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
        h1 #{post.title} 
        div.preview.left
          p.left 
            != post.preview 
        source = post.image
        #image-background
        img(src=source)


